{
  "name": "JA backend core microservice",
  "version": "1.0.0",
  "description": "A NestJS application",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:api-gateway": "nest build api-gateway",
    "build:applicant-service": "nest build applicant-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "concurrently \"npm:dev-*\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "start:api-gateway": "nest start api-gateway",
    "dev-api-gateway": "nest start api-gateway --watch",
    "start:applicant-service": "nest start applicant-service",
    "dev-applicant-service": "nest start applicant-service --watch",
    "build:admin-service": "nest build admin-service",
    "start:admin-service": "nest start admin-service",
    "dev-admin-service": "nest start admin-service --watch",
    "start:admin-service:debug": "nest start admin-service --debug --watch",
    "lint": "eslint '{apps,libs}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "gen": "hygen",
    "gen:microservice": "hygen microservice new",
    "gen:api": "hygen gateway-api new",
    "gen:crud": "hygen crud new",
    "gen:entity": "hygen entity new"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "11.0.0",
    "@node-rs/argon2": "^2.0.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.3",
    "libphonenumber-js": "^1.12.31",
    "mongodb": "6.17.0",
    "mongoose": "^8.20.2",
    "nest-commander": "^3.17.0",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "0.3.25"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.30.0",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "5.0.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.34",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "6.0.3",
    "eslint": "9.30.0",
    "eslint-plugin-prettier": "5.5.1",
    "globals": "16.2.0",
    "hygen": "^6.2.11",
    "jest": "29.7.0",
    "prettier": "3.6.2",
    "supertest": "7.1.1",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.35.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/apps",
      "<rootDir>/libs"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@auth/(.*)$": "<rootDir>/libs/auth/$1",
      "^@auth$": "<rootDir>/libs/auth",
      "^@common/(.*)$": "<rootDir>/libs/common/$1",
      "^@common$": "<rootDir>/libs/common",
      "^@dals/(.*)$": "<rootDir>/libs/dals/$1",
      "^@dals$": "<rootDir>/libs/dals"
    }
  }
}
