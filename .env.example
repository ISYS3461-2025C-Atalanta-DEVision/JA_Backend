API_GATEWAY_PORT=3000
API_GATEWAY_HOST='0.0.0.0'

# Firebase Admin SDK
FIREBASE_PROJECT_ID=FIREBASE_PROJECT_ID
FIREBASE_PRIVATE_KEY=FIREBASE_PRIVATE_KEY
FIREBASE_CLIENT_EMAIL=FIREBASE_CLIENT_EMAIL

# API Key for external services (Company system)
# Minimum 32 characters recommended for security
API_KEY=your-secret-api-key-here-min-32-chars

# JWT/JWE Secrets
JWT_SECRET_APPLICANT=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
# JWE encryption secrets (optional - falls back to JWT secrets if not set)
JWE_ACCESS_SECRET=your-jwe-access-secret-32-chars
JWE_REFRESH_SECRET=your-jwe-refresh-secret-32-chars

# Redis (optional - token revocation works without Redis)
REDIS_URL=redis://localhost:6379
# Or use individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Microservices Configuration
# Applicant Service
APPLICANT_SERVICE_HOST=localhost
APPLICANT_SERVICE_PORT=3002

# Admin Service
ADMIN_SERVICE_HOST=localhost
ADMIN_SERVICE_PORT=3003

# Job-Skill Service
JOB_SKILL_SERVICE_HOST=localhost
JOB_SKILL_SERVICE_PORT=3004

# AWS S3 Storage
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
CDN_BASE_URL=https://cdn.yourdomain.com

# Mailing Http
MAIL_FROM=verified_sendgrid_email@gmail.com
SENDGRID_API_KEY=SG.apikey

# ===========================================
# Kafka Configuration
# ===========================================
# Local Development (NODE_ENV != 'production')
# Uses localhost Kafka without authentication
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ja-core

# Consumer Groups
KAFKA_CONSUMER_GROUP_MATCHING=ja-matching-group
KAFKA_CONSUMER_GROUP_NOTIFICATION=ja-notification-group
KAFKA_CONSUMER_GROUP_APPLICANT=ja-applicant-group

# ===========================================
# Kafka Configuration (Confluent Cloud)
# ===========================================
# Required when NODE_ENV=production
# The SASL config is automatically applied in production mode
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_USERNAME=your-api-key
KAFKA_SASL_PASSWORD=your-api-secret
