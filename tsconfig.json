{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@libs/*": ["libs/*"],
      "@common/*": ["libs/common/*"],
      "@dals/*": ["libs/dals/*"],
      "@auth/*": ["libs/auth/*"],
      "@redis/*": ["libs/redis/*"],
      "@storage/*": ["libs/storage/*"]
    }
  }
}
