{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@auth/*": [
        "libs/auth/*"
      ],
      "@common/*": [
        "libs/common/*"
      ],
      "@dals/*": [
        "libs/dals/*"
      ],
      "@kafka/*": [
        "libs/kafka/*"
      ],
      "@libs/*": [
        "libs/*"
      ],
      "@redis/*": [
        "libs/redis/*"
      ],
      "@storage/*": [
        "libs/storage/*"
      ]
    }
  }
}